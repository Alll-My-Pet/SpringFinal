<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.spring_boot_allmypet.project.dao.IBoardDAO">
   <resultMap id="boardResultMap" type="com.spring_boot_allmypet.project.model.BoardVO">
	     <id property="bodNo" column="bodNo"/>
	     <result property="bodTitle" column="bodTitle"/>
	     <result property="memId" column="memId"/>
	     <result property="bodDate" column="bodDate"/>
	     <result property="bodView" column="bodView"/>
	     <result property="bodLike" column="bodLike"/>
	     <result property="bodText" column="bodText"/>
    </resultMap>
  
  
  <!-- 전체 게시글 조회 --> 
  	<select id="listAllBoard" resultMap="boardResultMap">
  		SELECT * FROM board ORDER BY bodNo DESC
  	</select>
  
  
  
  
  </mapper>