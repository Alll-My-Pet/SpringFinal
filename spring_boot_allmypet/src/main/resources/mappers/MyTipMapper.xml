<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.spring_boot_allmypet.project.dao.animal.IMyTipDAO">
	<!-- 전체 양육팁게시판 리스트 가져옴 -->
	<select id="getTipList" parameterType="String"
		resultType="com.spring_boot_allmypet.project.model.animal.MyTipBoardVO">
		SELECT * FROM mytip_board WHERE petCtgNo = #{petCtgNo}
	</select>

	<!-- 양육팁 게시판 내 베스트 양육팁 -->
	<select id="getTop3List" parameterType="String"
		resultType="com.spring_boot_allmypet.project.model.animal.MyTipBoardVO">
		SELECT * FROM mytip_board
		WHERE petCtgNo = #{petCtgNo}
		ORDER BY postLike DESC
		LIMIT 3
	</select>

</mapper>